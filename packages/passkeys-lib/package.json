{
  "name": "passkeys-lib",
  "version": "0.1.0",
  "private": false,
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "license": "BSD-3-Clause",
  "main": "./index.ts",
  "types": "./index.d.ts",
  "sideEffects": false,
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "bun run clean && bun run build:esm && bun run build:clean && bun run build:copy",
    "build:esm": "tsc --build --verbose",
    "build:clean": "rm -rf tsconfig.tsbuildinfo ./dist/tsconfig.tsbuildinfo ./dist/tsconfig.cjs.tsbuildinfo",
    "clean": "bun run build:clean && rm -rf dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:copy": "cp package.json dist && cp README.md dist && cp ../../LICENSE dist",
    "prepublishOnly": "bun run build"
  },
  "author": "Peter Anyaogu <peter@variance.space>"
}
